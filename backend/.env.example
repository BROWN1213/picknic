# ===================================
# Picknic Backend Environment Variables
# ===================================
# Copy this file to .env and fill in your actual values

# ===================================
# 데이터베이스 설정 (AWS RDS PostgreSQL)
# ===================================
DB_HOST=your-database-host
DB_PORT=5432
DB_NAME=your-database-name
DB_USER=your-database-user
DB_PASSWORD=your-database-password

# ===================================
# Redis 설정 (Redis Cloud)
# ===================================
REDIS_HOST=your-redis-host
REDIS_PORT=6379
REDIS_USERNAME=default
REDIS_PASSWORD=your-redis-password

# ===================================
# AWS S3 설정
# ===================================
AWS_S3_BUCKET_NAME=your-bucket-name
AWS_REGION=ap-northeast-2
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key

# ===================================
# AWS SNS 설정
# ===================================
AWS_SNS_TOPIC_ARN=your-sns-topic-arn

# ===================================
# AWS Cognito 설정 (Google OAuth)
# ===================================
COGNITO_USER_POOL_ID=ap-northeast-2_xxxxxxxxx
COGNITO_CLIENT_ID=your-cognito-client-id
COGNITO_REGION=ap-northeast-2
COGNITO_DOMAIN=picknic.auth.ap-northeast-2.amazoncognito.com
OAUTH_CALLBACK_URL=http://localhost:5173/auth/callback

# ===================================
# JWT 설정
# ===================================
JWT_SECRET=your-256-bit-secret-key-for-production
JWT_EXPIRATION=86400000

# ===================================
# Google Vision API
# ===================================
GOOGLE_VISION_API_KEY=your-google-vision-api-key

# ===================================
# CORS 설정
# ===================================
# 쉼표(,)로 여러 origin 구분 가능
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# ===================================
# Spring Profile
# ===================================
SPRING_PROFILES_ACTIVE=dev

# ===================================
# 로깅 레벨
# ===================================
LOG_LEVEL=INFO

# ===================================
# NEIS API 설정 (교육정보시스템)
# ===================================
NEIS_API_URL=https://open.neis.go.kr/hub/schoolInfo
# NEIS_API_KEY=your-neis-api-key  # 선택적: API 키 없이도 작동 가능
